{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "dist",
		"rootDir": ".",
		"types": ["@cloudflare/workers-types"]
	},
	"include": [
		"packages/*/src/**/*.ts"
	],
	"exclude": ["node_modules", "dist", "**/*.test.ts"]
}
